
/* TITLE BAR
 * Style for title bar
========================================================================= */

  {
    "class": "title_bar",
    "settings": ["themed_title_bar"],
    "bg": [<%= ui.background.primary.rgb %>],
    "fg": [<%= ui.foreground.primary.rgb %>],
